extend ../layout

block content
  .container
    .row
      .col-md-7
        embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
      .col-md-5
        dl.dl-horizontal
          dt 中文名
          dd= movie.title
          dt 英文名
          dd= movie.doctor
          dt 国籍
          dd= movie.country
          dt 语种
          dd= movie.language
          dt 入职年份
          dd= movie.year
          dt 简介
          dd= movie.summary
